doctype html
html(lang="en")
  head
    block title
      title UnWorkshop
    link(href='/css/bootstrap.css', rel='stylesheet')
    script(type='text/javascript', src='/js/bootstrap.min.js')
  body
    nav(class="navbar navbar-default")
      div(class="container-fluid")
      div(class="collapse navbar-collapse")
        ul(class="nav navbar-nav")
          li(class="")
            a(href="/") Home
          if isAdmin
            li
              a(href="/admin") Admin
          
          li(class="dropdown")
            a(href="/ideas" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false") #{stages[0]}
              span(class="caret")
              ul(class="dropdown-menu")
                li
                  a(href= '/ideas/gather') #{steps[0]}
                li
                  a(href= '/ideas/rate') #{steps[1]}
                li
                  a(href= '/ideas/filter') #{steps[2]}
                li(role="separator" class="divider")
                li
                  a(href='/ideas/result') Result
          li(class="dropdown")
            a(href="/methods" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false") #{stages[1]}
              span(class="caret")
              ul(class="dropdown-menu")
                li
                  a(href= '/methods/gather') #{steps[0]}
                li
                  a(href= '/methods/rate') #{steps[1]}
                li
                  a(href= '/methods/filter') #{steps[2]}
                li(role="separator" class="divider")
                li
                  a(href='/methods/result') Result
          li(class="dropdown")
            a(href="/milestones" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false") #{stages[2]}
              span(class="caret")
              ul(class="dropdown-menu")
                li
                  a(href= '/milestones/gather') #{steps[0]}
                li
                  a(href= '/milestones/rate') #{steps[1]}
                li
                  a(href= '/milestones/filter') #{steps[2]}
                li(role="separator" class="divider")
                li
                  a(href='/milestones/result') Result
            
        ul(class="nav navbar-nav navbar-right")
          if user
            li
              a(href="/logout") Logout
            li
              a(href='/user') Account
          else
            li
              a(href='/login') Login
    
    block content
